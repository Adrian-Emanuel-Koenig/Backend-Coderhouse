<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/navbar'); %>
  </header>
  <% if(products.length>0){ %> 
    <%=title %>
    <div class="container">
    <% products.forEach((item)=>{ %>
      <div class="lista">
          <p><%=item.title%></p>
          <p><%=item.price%></p>
          <img class="product-img" src="<%=item.thumbnail %>"/><br/>       
      </div>
    <% }) %>
  </div>
  <% } else { %> 
    <p>Productos no encontrados</p>
    <% } %> 
  </body>
</html>
